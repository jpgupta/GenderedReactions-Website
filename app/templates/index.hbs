<div class="container">
    <h2 class="margin-bottom-16">think seXY, for excellent research</h2>

    <h4>Help discover how drugs affect men and women differently</h4>

    <div class="row">
        <div class="col-md-10 margin-bottom-16">
            {{input type='text' value=searchTerm classNames='form-control cfg-input'
            placeholder='Enter a drug name to see some interesting info' action="getAdverseEffectsForDrug" }}
        </div>
        <div class="col-md-2 margin-bottom-16 text-center">
            {{#if fetchingDrugData}}
                <div id="ajaxloader" style="display: block;"></div>
            {{else}}
                <button class='form-control cfg-button' {{action 'getAdverseEffectsForDrug'}}>Hit it</button>
            {{/if}}
        </div>
    </div>
    {{#if drug}}
        <div class="row">
            <div class="col-md-3 margin-bottom-16">
                <div class="card" style="overflow:auto;">
                    <p class="lead uc-first">{{drug.genericName}}</p>

                    <p class="lead">
                        <small>Total reported side-effects</small>
                        <font class="pull-right">{{overallEventCount}}</font>
                    </p>
                    <p class="lead">
                        Male
                    </p>

                    <div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar"
                             aria-valuemin="0" aria-valuemax="100"
                            {{bind-attr aria-valuenow=percentageOfMaleEvents
                            style=maleTotalEventStyle}}>
                            <span>{{percentageOfMaleEvents}}%</span>
                        </div>
                    </div>
                    <p class="lead">
                        Female
                    </p>

                    <div class="progress">
                        <div class="progress-bar progress-bar-info" role="progressbar"
                             aria-valuemin="0" aria-valuemax="100"
                            {{bind-attr aria-valuenow=percentageOfFemaleEvents
                            style=femaleTotalEventStyle}}>
                            <span>{{percentageOfFemaleEvents}}%</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9 margin-bottom-16">
                <div class="card text-center">
                    <h3>Distribution of symptoms by sex</h3>
                    {{vertical-bar-chart
                    data=topOverallAdverseEventsBarData
                    selectedSeedColor='green'
                    withinGroupPadding='0.05'
                    betweenGroupPadding='0.05'
                    }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-9 col-md-offset-3 margin-bottom-16">
                {{#each adverseEffect in topOverallAdverseEvents}}
                    {{partial "fda-card"}}
                {{/each}}
            </div>
        </div>
    {{/if}}
</div>